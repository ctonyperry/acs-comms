# Azure Communication Services connection string
ACS_CONNECTION_STRING=endpoint=https://your-acs-resource.communication.azure.com/;accesskey=your-access-key

# Public base URL for webhooks (ngrok tunnel URL)
PUBLIC_BASE=https://your-ngrok-id.ngrok-free.app

# Optional: Path to Vosk STT model (leave empty to disable STT)
STT_MODEL_PATH=

# Piper TTS settings (for high-quality neural TTS)
PIPER_VOICE_PATH=./voices/en-us-high.onnx
PIPER_LENGTH_SCALE=1.08
PIPER_NOISE_SCALE=0.65
PIPER_NOISE_W=0.80
PIPER_SENTENCE_SILENCE=0.25

# Ollama LLM settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=30.0
OLLAMA_MAX_RETRIES=3
OLLAMA_TEMPERATURE=0.4
OLLAMA_TOP_P=0.9
OLLAMA_MAX_TOKENS=512

# Persona configuration
PERSONA_CONFIG_PATH=./config/persona.yaml